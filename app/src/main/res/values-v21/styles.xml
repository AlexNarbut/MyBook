<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppDefault" parent="AppTheme">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorControlNormal">@color/color_white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="menu_labels_style"  parent="AppTheme">
        <item name="android:background">@drawable/menu_helper</item>
        <item name="android:textColor">#fafafa</item>
    </style>
    <style name="spinner_style" parent="AppTheme">
        <item name="android:popupBackground">#000</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>